# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
end_of_line = crlf
trim_trailing_whitespace = true

[*.ts]
quote_type = single
max_line_length = 140

[*.md]
max_line_length = 140
trim_trailing_whitespace = false
